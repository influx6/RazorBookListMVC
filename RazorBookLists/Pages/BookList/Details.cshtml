@page
@model RazorBookLists.Pages.BookList.DetailsModel

<br />
<h2>Details of Book.Title</h2>
<br />
<br />

<div class="form-border">
    <div class="row push-tl-50-30">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Book.ISBN"></label>
                </div>
                <div class="col-sm-4">
                    @Html.DisplayFor(m => @Model.Book.ISBN)
                </div>
            </div>
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Book.Title"></label>
                </div>
                <div class="col-sm-4">
                    @Html.DisplayFor(m => @Model.Book.Title)
                </div>
            </div>
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Book.Author"></label>
                </div>
                <div class="col-sm-4">
                    @Html.DisplayFor(m => @Model.Book.Author)
                </div>
            </div>
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Book.Price"></label>
                </div>
                <div class="col-sm-4">
                    @Html.DisplayFor(m => @Model.Book.Price)
                </div>
            </div>
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Book.Availability"></label>
                </div>
                <div class="col-sm-4">
                    @Html.DisplayFor(m => @Model.Book.Availability)
                </div>
            </div>
            <div class="row">
                <a asp-page="Edit" asp-route-id="@Model.Book.Id" class="btn btn-small btn-success">Update Book</a>
                <a asp-page="Index" class="btn btn-small btn-primary">Back to Books</a>
            </div>
        </div>
    </div>
</div>



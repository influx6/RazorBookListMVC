@page "{id}/{handler?}"
@model RazorBookLists.Pages.BookList.DeleteModel

<br />
<h2>Delete Book</h2>
<br />
<br />

<div class="form-border">
    <h3 class="push-left-50">Are you sure you wish to delete this book ?</h3>
    <form method="post" class="form-group">
        <div class="row push-tl-50-30">
            <div class="form-group">
                <input type="hidden" asp-for="Book.Id" />
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Book.ISBN"></label>
                    </div>
                    <div class="col-sm-4">
                        @Html.DisplayFor(m => @Model.Book.ISBN)
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Book.Title"></label>
                    </div>
                    <div class="col-sm-4">
                        @Html.DisplayFor(m => @Model.Book.Title)
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Book.Author"></label>
                    </div>
                    <div class="col-sm-4">
                        @Html.DisplayFor(m => @Model.Book.Author)
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Book.Price"></label>
                    </div>
                    <div class="col-sm-4">
                        @Html.DisplayFor(m => @Model.Book.Price)
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Book.Availability"></label>
                    </div>
                    <div class="col-sm-4">
                        @Html.DisplayFor(m => @Model.Book.Availability)
                    </div>
                </div>
                <div class="row">
                    <input type="submit" value="Yes, Delete" class="btn btn-default btn-danger" />
                    <a asp-page="Details" asp-route-id="@Model.Book.Id" class="btn btn-small btn-primary">Back to Book</a>
                    <a asp-page="Index" class="btn btn-small btn-primary">Back to Book List</a>
                </div>
            </div>
        </div>
    </form>
</div>


